<h1>All cocktails</h1>
<p><%= link_to "Add another cocktail",  new_cocktail_path %></p>
<ul>
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="card col-lg-3 col-sm-7 m-2">
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 250, crop: :fill %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h5>
        <br>
        <%= link_to cocktail_path(cocktail.id), method: :delete do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</ul>
