<h1>All cocktails</h1>
<p><%= link_to "Add another cocktail",  new_cocktail_path %></p>
<ul>
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="card col-2 m-2">
      <img class="card-img-top" src=<%= cocktail.picture %> style="height: 200px">
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h5>
        <br>
        <%= link_to cocktail_path(cocktail.id), method: :delete do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</ul>
