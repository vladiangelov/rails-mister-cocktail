<h1><%= @cocktail.name %></h1>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id) %>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> <%= link_to "DELETE", cocktail_dose_path(@cocktail.id, dose.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>
<%= link_to "Back to all cocktails", cocktails_path %>
